<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
	<name>shop</name>
	<displayName>${project.name}</displayName>
	<description>${project.description}</description>
	<class>info.magnolia.module.shop.ShopModule</class>
	<versionHandler>info.magnolia.module.shop.setup.ShopModuleVersionHandler</versionHandler>
	<version>${project.version}</version>
	<components>
		<id>main</id>
		<component>
			<type>info.magnolia.module.shop.util.SimpleBean2ContentProcessorImpl</type>
			<implementation>info.magnolia.module.shop.util.SimpleBean2ContentProcessorImpl</implementation>
			<scope>singleton</scope>
			<lazy>true</lazy>
		</component>
	</components>
	<dependencies>
		<dependency>
			<name>core</name>
			<version>${magnoliaVersion}/*</version>
		</dependency>
		<dependency>
			<name>ui-framework</name>
			<version>${magnoliaUiVersion}/*</version>
		</dependency>
		<dependency>
			<name>dam</name>
			<version>${damVersion}/*</version>
		</dependency>
		<dependency>
			<name>resources</name>
			<version>${resourcesVersion}/*</version>
		</dependency>
		<dependency>
			<name>form</name>
			<version>${formVersion}/*</version>
		</dependency>
		<dependency>
			<name>categorization</name>
			<version>${categorizationVersion}/*</version>
		</dependency>
		<dependency>
			<name>ocm</name>
			<version>${ocmVersion}/*</version>
		</dependency>
		<dependency>
			<name>rssaggregator</name>
			<version>${rssAggVersion}/*</version>
		</dependency>
		<dependency>
			<name>site</name>
			<version>${siteVersion}/*</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<name>magnolia</name>
			<workspaces>
				<workspace>shoppingCarts</workspace>
				<workspace>shops</workspace>
				<workspace>shopProducts</workspace>
				<workspace>shopSuppliers</workspace>
			</workspaces>
			<nodeTypeFile>/mgnl-nodetypes/magnolia-module-shop-nodetypes.xml</nodeTypeFile>
		</repository>
	</repositories>
</module>
